{
  "expo": {
    "name": "lorcana-mobile",
    "slug": "lorcana-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/lorcana-logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "your-app-scheme",
    "splash": {
      "image": "./assets/images/lorcana-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#1A1A1A",
      "lottie": {
        "file": "./assets/animations/magic-sparkles.json"
      }
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font"
    ]
  }
}
